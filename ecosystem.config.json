{
  "apps": [
    {
      "name": "cashpong-main",
      "script": "server.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "HOST": "0.0.0.0"
      },
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "watch": false,
      "max_memory_restart": "1G",
      "restart_delay": 4000
    },
    {
      "name": "cashpong-multiplayer", 
      "script": "server-multiplayer.js",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3001,
        "HOST": "0.0.0.0"
      },
      "error_file": "./logs/multiplayer-err.log",
      "out_file": "./logs/multiplayer-out.log", 
      "log_file": "./logs/multiplayer-combined.log",
      "time": true,
      "watch": false,
      "max_memory_restart": "1G",
      "restart_delay": 4000
    }
  ]
}
